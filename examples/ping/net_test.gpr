with "config/net_test_config.gpr";
project Net_Test is
   for Target use "arm-eabi";
   for Runtime ("Ada") use "embedded-stm32f4";

   for Source_Dirs use ("src/", "config/");
   for Object_Dir use "obj/" & Net_Test_Config.Build_Profile;
   for Create_Missing_Dirs use "True";
   for Exec_Dir use "bin";
   for Main use ("net_test.adb");

   package Compiler is
      for Default_Switches ("Ada") use Net_Test_Config.Ada_Compiler_Switches;
   end Compiler;

   package Binder is
      for Switches ("Ada") use ("-Es"); --  Symbolic traceback
   end Binder;

   package Install is
      for Artifacts (".") use ("share");
   end Install;

   package Ide is
      for Program_Host use "localhost:4242";
      for Communication_Protocol use "remote";
      for Connection_Tool use "st-util";
   end Ide;

end Net_Test;
